{
  "compilerOptions": {
    "target": "ES2018",
    "skipLibCheck": true,
    "module": "commonjs",
    "lib": ["es2019"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": "./",
    "rootDir": "src",
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "types": ["node", "jest"],
  },
  "exclude": ["cdk.out", "dist", "node_modules", "tst", "**/jest.config.*"]
}
